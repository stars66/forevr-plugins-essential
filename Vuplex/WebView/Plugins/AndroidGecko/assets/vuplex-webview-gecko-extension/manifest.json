{
  "manifest_version": 2,
  "name": "vuplex-webview-gecko-extension",
  "version": "3.12",
  "description": "Adds support for the Vuplex 3D WebView window.vuplex API.",
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-agent@vuplex.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.jsm"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons"
  ]
}
